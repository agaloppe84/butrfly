<section id="hero">
  <div class="wrapper">
    <span class="bigtitle">BUTRFLY</span><span class="beta"> beta</span>
    <h4><%= t(:header) %></h4>
    <a href="#beta-form" class="btn-cta" ><%= t(:cta) %></a>
  </div>
</section>


<!-- Start About us -->
<div id="aboutus">
  <div class="container-fluid">
      <h2 class="section-title"><%= t(:about_title) %></h2>
      <div class="about-text">
        <h5><%= t(:about_text) %></h5>
      </div>
  </div>
</div>
<!-- End About us -->

<hr>

<!-- Start Features -->
<div id="features">
  <div class="container-fluid">
      <h2 class="section-title"><%= t(:features_title) %></h2>
      <div class="row">
           <% t(:features).each do |feature| %>
              <div class="col-sm-6 col-md-4">
                  <div class="icon-box">
                    <span class="icon">
                      <i class="<%= feature[:icon] %>" aria-hidden="true"></i>
                    </span>
                    <h4><%= feature[:title] %></h4>
                    <p><%= feature[:description] %></p>
                  </div>
              </div>
          <% end %>
      </div>
  </div>
</div>
<!-- End Features -->

<%= partial "beta-form" %>
